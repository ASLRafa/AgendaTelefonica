<%- include('includes/head'); %>
<%- include('includes/nav'); %>

    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-3">
                <h1 class="text-center">Contato</h1>
                <p class="text-center">Crie ou edite seu contato abaixo:</p>

                <%- include('includes/messages')%>

                <form action="/contato/register" method="post">
                    <input type="hidden" name="_csrf" value= <%= csrfToken %> >
                    <div class="form-group">
                      <label>Nome</label>
                      <input type="text" name="nome" class="form-control"  placeholder="Nome">
                    </div>
                    <div class="form-group">
                      <label>Sobrenome</label>
                      <input type="text" name="sobrenome" class="form-control" placeholder="Sobrenome">
                    </div>
                    <div class="form-group">
                        <label>Telefone</label>
                        <input type="tel" name="telefone" class="form-control" placeholder="telefone">
                      </div>
                      <div class="form-group">
                        <label>E-mail</label>
                        <input type="email" class="form-control"  name="email"aria-describedby="emailHelp" placeholder="e-mail">
                      </div>
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                  </form>

            </div>
        </div>
    </div>

<%- include('includes/footer'); %>